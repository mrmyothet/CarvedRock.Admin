@model ProductModel

@{
    ViewData["Title"] = "Product Details";
}

<div>
    <h4>Product Details</h4>
    <hr>
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(m => m.Id)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(m => m.Id)
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(m => m.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(m => m.Name)
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(m => m.Description)
        </dt>
        <dd class=col-sm-10>
            @Html.DisplayFor(m => m.Description)
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(m => m.Price)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(m => m.Price)
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(m => m.IsActive)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(m => m.IsActive)
        </dd>
    </dl>
</div>
<div>
    <a class="btn btn-warning" asp-action="Edit" asp-route-id="@Model.Id">Edit</a>
    <a class="btn btn-info" asp-action="Index">Back to Product List</a>
</div>